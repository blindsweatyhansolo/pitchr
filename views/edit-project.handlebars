{{!-- EDIT PROJECT PAGE --}}
<section class="d-flex justify-content-center">
    <div class="card col-8 my-3">
        <h2 class="card-header text-center">
            Edit {{project.title}}
        </h2>
        <div class="card-body d-flex flex-column justify-content-center">
            <form class="edit-project-form col-12">
                <div class="form-group">
                    <label for="edit-project-title">Title:</label>
                    <input type="text" name="edit-project-title" class="form-control" id="edit-project-title" value="{{project.title}}">
                </div>
                <div>
                    <label for="edit-project-descriptionShort">Short Description</label>
                    <textarea name="edit-project-descriptionShort" class="form-control" id="edit-project-descriptionShort">{{project.descriptionShort}}</textarea>
                </div>
                <div>
                    <label for="edit-project-descriptionLong">Full Description</label>
                    <textarea name="edit-project-descriptionLong" rows="4" class="form-control" id="edit-project-descriptionLong">{{project.descriptionLong}}</textarea>
                </div>

                <br>

                <div>
                    <button type="submit" class="btn col-12 my-2">SAVE</button>
                </div>
                <div>
                    <button class="delete-btn btn col-12 my-2">DELETE</button>
                </div>
            </form>
        </div>
    </div>
</section>

<script src="/javascript/edit-project.js"></script>
<script src="/javascript/delete-project.js"></script>